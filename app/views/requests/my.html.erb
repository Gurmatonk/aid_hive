<% scope = [:requests, :my] %>

<% content_for :header do %>
  <h2><%= t_view :heading, scope: scope, model_name: Request.model_name.human(count: :other) %></h2>
<% end %>

<% content_for :content do %>
  <%= render partial: 'shared/entries_search', locals: {hidden_forwards: parameters_by_regex(/\Aquery_(?=commented)/, params)} %>
  <%= render partial: 'shared/entries_table', locals: {entries: @requests} %>
  <a name=commented_entries></a>
<% end %>

<% content_for :additional_content do %>
  <h3><%= t_view :commented, scope: scope, model_name: Request.model_name.human(count: :other) %></h3>
  <%= render partial: 'shared/entries_search', locals: {query_prefix: 'query_commented_', hidden_forwards: parameters_by_regex(/\Aquery_(?!commented)/, params)} %>
  <%= render partial: 'shared/entries_table', locals: {entries: @commented_requests, page_param_name: :query_commented_page, params: {anchor: 'commented_entries'}} %>
<% end %>
