<%# add navigation links to this file %>
<%= subnav_link_to params[:controller] == 'visitors', root_path do %>
  <%= t_navigation :home %>
<% end %>
<%= navbar_menu params[:controller] == 'requests', t_navigation(:requests) do %>
  <%= subnav_link_to false, requests_path, t_navigation(:all_requests) %>
  <%= subnav_link_to false, new_request_path, t_navigation(:new_request) %>
  <%= subnav_link_to false, my_requests_path, t_navigation(:my_requests) %>
<% end %>
<% if user_signed_in? %>
  <li><%= link_to 'Edit account', edit_user_registration_path %></li>
  <li><%= link_to 'Sign out', destroy_user_session_path, :method=>'delete' %></li>
<% else %>
  <li><%= link_to 'Sign in', new_user_session_path %></li>
  <li><%= link_to 'Sign up', new_user_registration_path %></li>
<% end %>
<li><%= link_to 'About', page_path('about') %></li>
