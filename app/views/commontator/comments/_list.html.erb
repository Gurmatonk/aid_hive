<% # Clients of this partial must supply the following variables:
   # comments
   # user
%>

<div class="messages">
  <% comments.includes(:creator, :editor).each do |comment| %>
    <%= render :partial => 'commontator/comments/show',
               :locals => { :comment => comment,
                            :user => user } %>
  <% end %>
</div>
