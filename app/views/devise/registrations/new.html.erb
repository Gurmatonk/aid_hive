<% content_for :header do %>
      <h1>Sign up</h1>
<% end %>
<% content_for :content do %>
  <%= bootstrap_form_for resource, as: resource_name, url: registration_path(resource_name), label_col: 'col-md-2', control_col: 'col-md-10' do |f| %>
    <%= devise_error_messages! %>
    <div class="row">
      <div class="col-md-6">
        <fieldset>
          <legend>Login data</legend>
          <%= f.email_field :email, autofocus: true %>
          <%= f.password_field :password %>
          <%= f.password_field :password_confirmation %>
        </fieldset>
      </div>
      <div class="col-md-6">
        <fieldset>
          <legend>Account data</legend>
          <%= f.text_field :name %>
          <%= render partial: 'shared/address_inputs', locals: {form: f} %>
        </fieldset>
      </div>
    </div>
    <%= f.form_group do %>
      <%= f.primary 'Sign up' %>
    <% end %>
  <% end %>
<% end %>
