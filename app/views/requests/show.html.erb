<% content_for :header do %>
  <h2><%= Request.model_name.human %>: <%= @request.title %></h2>
<% end %>

<% content_for :toolbar do %>
  <%= action_button @request, :complete, method: :post, icon: :ok, title: 'Mark request as completed' %>
<% end %>

<% content_for :content do %>
  <%= render partial: 'shared/entry_details', locals: {entry: @request} %>
<% end %>
